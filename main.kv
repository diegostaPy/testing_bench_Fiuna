#: import LinePlot kivy_garden.graph.LinePlot

<ClockText>:
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
    font_size: self.width/6


<ButtonNew@Button>:
    background_normal: ''
    background_down: ''
    background_color: 0.15, 0.15, 0.15, 1
    font_size: self.width/8

<RecordPopUp@Popup>:
    file_name: file_name
    title: "RECOPILACION DE DATOS"
    id: rpop
    size_hint: 0.8, 0.6
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            padding: 10, 10, 10, 10

            Label:
                font_size: self.width/10
                text: "Nombre del archivo: "
                pos_hint: {"x":0, "top":0.65}
                size_hint: 1, 0.5

            TextInput:
                id: file_name
                font_size: self.width/10
                size_hint: (1, 0.5)
                height: self.height
                pos_hint: {"x":0.5, "top":0.65}
                hint_text:'Name'
                multiline: False
                write_tab: False

        BoxLayout:
            padding: 100, 10, 100, 10
            spacing: '100dp'

            Button:
                font_size: self.height/2
                text: "Accept"
                size_hint: 0.5, 0.5
                on_release:
                    root.accept()
            Button:
                font_size: self.height/2
                text: "Cancel"
                size_hint: 0.5, 0.5
                on_release:
                    app.root.recordButton()
                    root.cancel()

<ConfigPopUp@Popup>:
    title: "CONFIGURACION"
    id: spop
    size_hint: 0.45, 0.6
    auto_dismiss: True

    BoxLayout:
        orientation: 'vertical'

        ConfigTab:
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_default_tab: False
            tab_height: 40
            tab_width: 170

            TabbedPanelItem:
                text: 'SENSOR DE FLUJO'
                Label:
                    text: "First tab"

            TabbedPanelItem:
                text: 'SENSOR DE PRESION'
                BoxLayout:
                    Label:
                        text: 'Press button'
                    Button:
                        text: 'Click it'

        BoxLayout:
            size_hint: 1, 0.1
            padding: 100, 0, 100, 0
            spacing: '100dp'

            Button:
                font_size: '25sp'
                text: "Accept"
                size_hint: 0.9, 0.9
                on_release:
                    app.root.configButton()
                    root.accept()
            Button:
                font_size: '25sp'
                text: "Cancel"
                size_hint: 0.9, 0.9
                on_release:
                    app.root.configButton()
                    root.cancel()

<MainScreen>:

    graph_P: graph_p
    graph_F: graph_f
    graph_V: graph_v

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            padding: 10, 10, 10, 10
            spacing: '10dp'

            BoxLayout:
                orientation: 'vertical'
                bcolor: .1, .1, .1, 1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Graph:
                    id: graph_p
                    xlabel: 'Tiempo (s)'
                    ylabel: 'Presion (cmH20)'
                    x_ticks_minor: 5
                    x_ticks_major: 2
                    y_ticks_major: 1
                    y_grid_label: True
                    x_grid_label: True
                    padding: 3
                    x_grid: True
                    y_grid: True
                    xmin: 0
                    xmax: 10
                    ymin: 0
                    ymax: 5


                Graph:
                    id: graph_f
                    xlabel: 'Tiempo (s)'
                    ylabel: 'Flujo (l/min)'
                    x_ticks_minor: 5
                    x_ticks_major: 2
                    y_ticks_major: 1
                    y_grid_label: True
                    x_grid_label: True
                    padding: 3
                    x_grid: True
                    y_grid: True
                    xmin: 0
                    xmax: 10
                    ymin: 0
                    ymax: 5


                Graph:
                    id: graph_v
                    xlabel: 'Tiempo (s)'
                    ylabel: 'Volumen (ml)'
                    x_ticks_minor: 5
                    x_ticks_major: 2
                    y_ticks_major: 100
                    y_grid_label: True
                    x_grid_label: True
                    padding: 3
                    x_grid: True
                    y_grid: True
                    xmin: 0
                    xmax: 10
                    ymin: -100
                    ymax: 500


            GridLayout:
                cols: 2
                size_hint: (.3, 1)
                orientation: 'vertical'
                spacing: '10dp'

                # PIP
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "PIP"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.pip_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "cmH2O"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # PEEP
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "PEEP"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.peep_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "cmH2O"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # Tiempo Inspiratorio
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "Ti"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.ti_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "s"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # Tiempo Espiratorio
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "Te"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.te_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "s"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # Relacion I:E
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "I:E"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: "1:"+root.ie_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: ""
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # BPM
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "BPM"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.bpm_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: ""
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # Flujo Inspiratorio Pico
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "PIF"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.pif_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "l/min"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

                # Volumen tidal
                BoxLayout:
                    orientation: 'vertical'
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.15, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        size_hint: 1, 0.4
                        font_size: self.height
                        text: "Vti"
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 1
                        font_size: self.height/2
                        text: root.vti_string
                        text_size: self.size
                        valign: 'middle'
                        halign: 'right'
                        color: 1, 1, 1, 1

                    Label:
                        size_hint: 1, 0.3
                        font_size: self.height
                        text: "ml"
                        text_size: self.size
                        valign: 'top'
                        halign: 'right'
                        color: 1, 1, 1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, .1)

            bcolor: .0, .0, .0, 1
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'horizontal'
                padding: 10, 0, 12, 10
                spacing: '10dp'
                bcolor: .0, .0, .0, 1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ButtonNew:
                    id: graficar
                    text: "Gráfica"
                    size_hint: 1, 1
                    on_release: root.graphButton()

                ButtonNew:
                    id: mostrar
                    text: "Monitoreo"
                    halign: 'center'
                    size_hint: 1, 1
                    on_release: root.showButton()

                ButtonNew:
                    id: setear
                    text: "Configuración"
                    size_hint: 1, 1
                    on_release: root.configButton()

                ButtonNew:
                    id: grabar
                    text: "Grabación"
                    size_hint: 1, 1
                    on_release: root.recordButton()

                ButtonNew:
                    id: info
                    text: "Info"
                    size_hint: 1, 1
                    on_release: root.infoButton()

            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.3, 1)
                padding: -2, 0, 10, 10
                spacing: '10dp'
                bcolor: .0, .0, .0, 1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size

                ButtonNew:
                    id: salir
                    font_size: self.width/6
                    text: "Salir"
                    size_hint: 1, 1
                    on_release: root.exitButton()

                ClockText:
                    id: clocktext
                    size_hint: 1,1

